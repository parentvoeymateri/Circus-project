<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.teslya.circus.controller.LoginController"
      alignment="CENTER" spacing="30"
      style="-fx-background-repeat: no-repeat; -fx-background-size:100% 100%; -fx-background-position: center; -fx-padding: 50;">

    <Label text="Информационно-справочная система цирка"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-fill: #212529; -fx-background-color: #d39133;" />

    <VBox spacing="15" alignment="CENTER">
        <Label text="Логин" style="-fx-font-size: 16px; -fx-text-fill: #495057;" />
        <TextField fx:id="usernameField" promptText="Введите логин" prefWidth="300" style="-fx-font-size: 14px;" />

        <Label text="Пароль" style="-fx-font-size: 16px; -fx-text-fill: #495057;" />
        <PasswordField fx:id="passwordField" promptText="Введите пароль" prefWidth="300" style="-fx-font-size: 14px;" />

        <HBox spacing="20" alignment="CENTER">
            <VBox spacing="10" alignment="CENTER">
                <Button text="Войти" onAction="#login"
                        style="-fx-background-color: #61a728; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 30; -fx-background-radius: 8;" />
                <Button text="Регистрация" onAction="#register"
                        style="-fx-background-color: #ff0000; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 12 30; -fx-background-radius: 8;" />
            </VBox>

            <VBox spacing="8" alignment="CENTER_LEFT">
                <Label text="Выберите роль при регистрации:"
                       style="-fx-font-size: 14px; -fx-text-fill: #495057;" />
                <ComboBox fx:id="roleComboBox" prefWidth="200" promptText="Выберите роль">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="VIEWER" />
                            <String fx:value="MANAGER" />
                            <String fx:value="ARTIST" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </VBox>
        </HBox>
    </VBox>

</VBox>